{
  "experiment_name": "ZKP_Vehicular_Crowdsensing_Comprehensive_Evaluation",
  "version": "1.0",
  "language": "en",
  
  "output_config": {
    "base_dir": "./experiment_results",
    "chart_format": "pdf",
    "chart_dpi": 300,
    "include_png": true
  },
  
  "experiment_1a_functional_verification": {
    "enabled": true,
    "vehicle_counts": [20, 50, 100, 200],
    "task_area_sizes": [16, 64, 256],
    "reports_per_scenario": 1000,
    "time_window_seconds": 60,
    "expected_acceptance_rate": 0.995
  },
  
  "experiment_1b_attack_detection": {
    "enabled": true,
    "attack_types": {
      "location_forge": {
        "samples": 200,
        "description": "Geohash not in whitelist"
      },
      "time_forge": {
        "samples": 200,
        "description": "Timestamp outside time window"
      },
      "token_abuse": {
        "samples": 100,
        "description": "Modified or expired RSU token"
      },
      "replay": {
        "samples": 100,
        "description": "Replayed old valid report"
      },
      "double_report": {
        "samples": 100,
        "description": "Same vehicle, same token, multiple reports"
      }
    },
    "expected_tpr": 0.99,
    "expected_fpr": 0.01
  },
  
  "experiment_2a_location_privacy": {
    "enabled": true,
    "task_area_sizes": [16, 64, 256, 1024],
    "reports_per_size": 500,
    "schemes": ["Plain", "BPDV", "ZKP-LRS"]
  },
  
  "experiment_2b_time_privacy": {
    "enabled": true,
    "time_window_lengths": [30, 60, 120, 300],
    "reports_per_window": 500,
    "tolerance_windows": [5, 10, 30],
    "schemes": ["Plain", "Coarse", "ZKP-LRS"]
  },
  
  "experiment_2c_linkability": {
    "enabled": true,
    "vehicle_count": 50,
    "task_count": 10,
    "duplicate_vehicles": 5,
    "duplicate_reports_range": [2, 5],
    "clustering_algorithms": ["KMeans", "DBSCAN", "Random"]
  },
  
  "experiment_3a_crypto_primitives": {
    "enabled": true,
    "pedersen_iterations": 10000,
    "merkle_leaf_counts": [8, 16, 32, 64, 128, 256, 512, 1024],
    "merkle_iterations": 1000,
    "bulletproof_bit_lengths": [8, 16, 32, 64],
    "bulletproof_iterations": 100,
    "lsag_ring_sizes": [4, 8, 16, 32, 64],
    "lsag_iterations": 1000,
    "mlkem_iterations": 1000
  },
  
  "experiment_3b_end_to_end": {
    "enabled": true,
    "vehicle_counts": [10, 20, 50, 100, 200],
    "reports_per_vehicle": 1,
    "repetitions": 100
  },
  
  "experiment_3c_communication": {
    "enabled": true,
    "merkle_sizes": [16, 64, 256, 1024],
    "ring_sizes": [4, 8, 16, 32],
    "bandwidth_scenarios": {
      "vehicle_counts": [100, 500, 1000],
      "report_frequencies": [30, 60, 120],
      "duration_hours": 1
    }
  },
  
  "experiment_4a_ablation": {
    "enabled": true,
    "schemes": {
      "plain": {
        "location": "plaintext",
        "time": "plaintext",
        "identity": "plaintext",
        "pq_safe": false
      },
      "zk_only": {
        "location": "merkle",
        "time": "bulletproof",
        "identity": "plaintext",
        "pq_safe": false
      },
      "lrs_only": {
        "location": "plaintext",
        "time": "plaintext",
        "identity": "lsag",
        "pq_safe": false
      },
      "zk_lrs": {
        "location": "merkle",
        "time": "bulletproof",
        "identity": "lsag",
        "pq_safe": false
      },
      "zk_lrs_pq": {
        "location": "merkle",
        "time": "bulletproof",
        "identity": "lsag",
        "pq_safe": true
      }
    },
    "test_vehicle_count": 100,
    "reports_per_scheme": 1000,
    "repetitions": 10
  },
  
  "experiment_4b_baseline": {
    "enabled": true,
    "schemes": {
      "bpdv": {
        "name": "BPDV",
        "description": "Blockchain-based Privacy-Preserving Data Collection",
        "features": {
          "blockchain": true,
          "homomorphic_encryption": true,
          "location_granularity": "coarse"
        }
      },
      "pprm": {
        "name": "PPRM",
        "description": "Privacy Preservation with Reputation Management",
        "features": {
          "pseudonym": true,
          "location_obfuscation": true,
          "k_anonymity": true
        }
      },
      "proposed": {
        "name": "Proposed (ZKP-LRS)",
        "description": "Zero-Knowledge Proof with Ring Signature",
        "features": {
          "zkp": true,
          "ring_signature": true,
          "post_quantum": true
        }
      }
    },
    "test_vehicle_count": 100,
    "task_area_size": 256,
    "time_window": 60,
    "repetitions": 100
  },
  
  "experiment_5a_practical": {
    "enabled": false,
    "comment": "Requires real city network setup",
    "scenarios": {
      "air_quality": {
        "area_km2": 1.0,
        "grid_size_m2": 100,
        "time_window_min": 30,
        "vehicle_count": 200
      },
      "traffic_congestion": {
        "road_length_km": 5.0,
        "segment_length_m": 500,
        "reports_per_segment": 5,
        "time_window_min": 15,
        "vehicle_count": 500
      },
      "illegal_parking": {
        "area_km2": 0.5,
        "reports_per_segment": 3,
        "time_window_min": 60,
        "vehicle_count": 100
      }
    }
  },
  
  "quality_assurance": {
    "checkpoint_1_min_acceptance_rate": 0.95,
    "checkpoint_2_max_latency_ms": 1000,
    "random_seed": 42,
    "parallel_execution": false,
    "max_workers": 4
  },
  
  "sumo_config": {
    "sumo_home": "D:/sumo",
    "use_gui": false,
    "step_length": 0.1
  }
}
